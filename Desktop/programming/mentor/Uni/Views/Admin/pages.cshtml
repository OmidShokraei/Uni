
@{
    ViewBag.Title = "pages";
    Layout = "~/Views/Shared/_adminlayout.cshtml";
}
@using mentor.Models
@model List<pageData>
<div class="row">
    <div class="card">
        <div class="card-body">


            <!-- Table with stripped rows -->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">اسم صفحه</th>
                        <th scope="col">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (pageData item in Model)
                    {
                        <tr>
                            
                            <td>
                                @item.Name
                            </td>
                            
                            <td>
                                <a class="btn btn-success" href="editpage/@item.pkID">ویرایش</a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
            <div>
              
            </div>
            <!-- End Table with stripped rows -->

        </div>
    </div>
</div>

