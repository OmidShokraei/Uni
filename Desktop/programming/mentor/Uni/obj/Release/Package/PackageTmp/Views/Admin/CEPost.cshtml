
@{
    ViewBag.Title = "CEPost";
    Layout = "~/Views/Shared/_adminlayout.cshtml";
    bool selected = false;
    string color = "yellow";
    }
@using mentor.Models
@model PostData
<div class="row">
    <div class="card">
        <div class="card-body">
            <h3 style="color:@color">@Model.m</h3>

            <!-- Vertical Form -->
            <form class="row g-3" method="post" enctype="multipart/form-data" action="@Url.Action("CEPost", "admin")">
                <div class="col-12"style="display:none">
                    <label for="Title" class="form-label">شمارنده</label>
                    <input type="number" class="form-control" name="pkID" value="@Model.pkID">
                </div>
                <div class="col-12">
                    <label for="Title" class="form-label">عنوان</label>
                    <input type="text" class="form-control" name="Title" value="@Model.Title">
                </div>
                <div class="col-12">
                    <label for="Dis" class="form-label">محتوا</label>
                    <textarea class="form-control" name="Dis">@Model.Dis</textarea>
                </div>
                <div class="col-12">
                    <label for="Writer" class="form-label">نویسنده</label>
                    <select class="form-control" name="Writer">
                        @foreach (var item in Model.Writers)
                        {
                            if (item.pkID == Model.Writer)
                            {
                                selected = true;
                            }
                            else
                            {
                                selected = false;
                            }
                            <option value="@item.pkID" selected="@selected">@item.Name @item.Family</option>
                        }
                    </select>
                </div>
                <div class="col-12">
                    <label for="Content" class="form-label">محتوا</label>
                    <textarea class="tinymce-editor form-control" name="Content">@Model.Content</textarea>
                </div>
                <div class="col-12">
                    <label for="Keywords" class="form-label">کلمات کلیدی</label>
                    <input type="text" class="form-control" name="Keywords" value="@Model.Keywords">
                </div>
                <div class="col-12">
                    <label for="Image" class="form-label">عکس شاخص</label>
                    <input type="file" class="form-control" name="Image">
                </div>
                <div class="col-12">
                    <label for="ImageTitle" class="form-label">عنوان عکس</label>
                    <input type="text" class="form-control" name="ImageTitle" value="@Model.ImageTitle">
                </div>
                <div class="col-12">
                    <label for="ImageAlt" class="form-label">متن جایگزین عکس</label>
                    <input type="text" class="form-control" name="ImageAlt" value="@Model.ImageAlt">
                </div>
                <div class="col-12">
                    <img src="~/adminAssets/img/imgsrc/@Model.imageUrl" width="300" height="300" />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">ذخیره</button>
                    <a type="reset" class="btn btn-secondary" href="~/admin/blog">بازگشت</a>
                </div>

            </form><!-- Vertical Form -->

        </div>
    </div>

</div>
@section s
    {
    <script>
        var status ="@Model.status";
        var m = "@Model.m";
        if (status != "") {
            if (status == "True") {
                swal("عملیات موفق", m, "success")
            }
            else if (status == "False") {
                swal("عملیات ناموفق", m, "error")
            }
        }
    </script>
    }