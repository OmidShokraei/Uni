@using mentor.Models
@model MenuModel
    @{ 
        string ClassActive = "";
    }
<header id="header" class="header d-flex align-items-center sticky-top">
    <div class="container-fluid container-xl position-relative d-flex align-items-center">

        <a href="/home/index" class="logo d-flex align-items-center me-auto">
            <!-- Uncomment the line below if you also wish to use an image logo -->
            <!-- <img src="~/assets/img/logo.png" alt=""> -->
            <h1 class="sitename">Mentor</h1>
        </a>

        <nav id="navmenu" class="navmenu">
            <ul>
                @{
                    foreach (tbl_pages item in Model.pages)
                    {
                        if (item.Action == ViewBag.title)
                        {
                            ClassActive = "active";
                        }
                        else
                        {
                            ClassActive = "";
                        }
                        <li><a href="/home/@item.Action" class="@ClassActive">@item.Name<br></a></li>
                        }
                    }
                    
                        <li class="dropdown">
                            <a href="#"><span>زبان/Language</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                            <ul>
                                @foreach (tbl_Languages item in Model.langs)
                                {
                                <li><a href="@Url.Action("setlang", "home", new { id= item.pkID })">@item.Lang</a></li>
                                }
                              
                            </ul>
                        </li>

                        
                

            </ul>
            <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
        </nav>

        <a class="btn-getstarted" href="courses">Get Started</a>

    </div>
</header>