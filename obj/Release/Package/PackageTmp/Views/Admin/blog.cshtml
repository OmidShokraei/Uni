
@{
    ViewBag.Title = "blog";
    Layout = "~/Views/Shared/_adminlayout.cshtml";
}
@using mentor.Models
@model List<blogs>
<div class="row">
    <div class="card">
        <div class="card-body">
            <a class="btn btn-primary" style="margin:5px" href="cepost/0">
                مقاله جدید
            </a>

            <!-- Table with stripped rows -->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">عنوان</th>
                        <th scope="col">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (blogs item in Model)
                    {
                        <tr>
                          
                            <td>
                                @item.Title
                            </td>
                            <td>
                                <a class="btn btn-success" href="CEPost/@item.pkID">ویرایش</a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
            <div>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalDialogScrollable" style="margin:7px">
                    مقاله جدید
                </button>
            </div>
            <!-- End Table with stripped rows -->

        </div>
    </div>
</div>
