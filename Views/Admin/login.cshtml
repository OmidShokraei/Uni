    <!-- Template Main JS File -->
    <script src="~/adminAssets/js/main.js"></script>
    <script>
        $("#btn_submit").click(function () {
            check = true;
            var email = $("#yourUsername");
            var pass = $("#yourPassword");
            if (email.val().length == 0) {
                $("#usermsg").css("display", "block");
                $(email).removeClass("myvalid");
                $(email).addClass("myinvalid");
                check = false;
            }
            if (pass.val().length == 0) {
                $("#passmsg").css("display", "block");
                $(pass).removeClass("myvalid");
                $(pass).addClass("myinvalid");
                check = false;
            }
            $(".form-control").change(function () {
                if ($(this).val().length > 0) {
                    $(this).parent().children(".invalid-feedback").css("display", "none");

                    $(this).removeClass("myinvalid");

                    $(this).addClass("myvalid");
                }

            });
            if (check) {
                $.post("/Admin/login_check", { e: email.val(), p: pass.val() })
                    .done(function (res) {

                        switch (res) {

                            case 1: alert("کاربر وجود ندارد");

                                break;
                            case 2: alert("پسوورد اشتباه است");
                                break;
                            case 3: window.location.href = "dashboard";
                                break;


                        }

                    })
                    .fail(function () {
                        alert("خطا در برقراری ارتباط با سرور")
                    })
                    .always(function () {

                    });
            }

        });


    </script>

